{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="img_index" style="background-image: url('{{ recipe.picture }}')">
            </div>
        </div>
            <div class="block_text_index">
                <h2>{{ recipe.title }}</h2>
                <div class="row">
                    <div class="col m5 offset-m1 s12">
                        <h3>Ingredients</h3>
                        <p class="flow-text">
                            {{ recipe.ingredients|nl2br}}
                        </p>
                    </div>
                    <div class="col m5 offset-m1 s12">
                        <h3>Informations</h3>
                        <p class="flow-text">
                            Backing time : {{ recipe.bakingTime }}<br>
                            Cook Time :  {{ recipe.cookTime }}<br>
                            Time : {{ recipe.totalTime }}<br>
                            Recipe for {{ recipe.numberPeople }} persons<br>
                            Level : {{ recipe.level }}
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col m10 offset-m1 s12">
                        <h3>Recipe</h3>
                        <p class="flow-text">
                            {{ recipe.textRecipe|nl2br }}
                        </p>
                    </div>
                </div>
                        <div class="actions_container">
                            <a href="{{ path('saltrecipe_index') }}" class="btn_perso btn_actions">Back to the list</a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('saltrecipe_edit', { 'id': recipe.id }) }}" class="btn_perso btn_actions">Edit</a>

                            {{ form_start(delete_form) }}
                            <input type="submit" value="Delete" class="btn_perso btn_actions">
                            {{ form_end(delete_form) }}
                            {% endif %}
                        </div>
            </div>
    </div>

{% endblock %}

